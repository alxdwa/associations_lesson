<div class="container">
  <h1>Add Author</h1>
  <div class="content">
    <form action="<%= authors_path %>" method="POST">
     <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
      <ul class="flex-outer">
        <li>
          <label for="name">Author name</label><br>
          <input type="text" name="name" id="name"><br>
        </li>
        <li>
          <label for="name">Author's D.O.B.</label><br>
          <input type="date" name="date_of_birth" id="name"><br>
        </li>
        <li>
          <input type="submit" class="buttons" value="Add Author"><br>
        </li>
      </ul>
    </form>
    <center><%= link_to("View Authors", authors_path) %></center>
  </div>
</div>