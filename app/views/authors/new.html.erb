<div class="container">
  <h1>Add Author</h1>
  <nav>
    <%= link_to("View Books", books_path) %> | <%= link_to("Add Book", new_book_path) %> | <%= link_to("View Authors", authors_path) %> | <%= link_to("Add Author", new_author_path) %>
  </nav>
  <div class="content">
    <form action="<%= authors_path %>" method="POST">
     <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
      <div class="form-flex">
        <div class="label">
          <label for="name">Author name</label>
        </div>
        <div class="input">
          <input type="text" name="name" id="name">
        </div>
        <div class="label">
          <label for="name">Author's D.O.B.</label>
        </div>
        <div class="input">
          <input type="date" name="date_of_birth" id="name">
        </div>
        <div class="label"></div>
        <div class="input">
          <input type="submit" class="buttons" value="Add Author">
        </div>
      </div>
    </form>
  </div>
</div>