<div class="container">
  <h1>Edit Author</h1>
  <nav>
    <%= link_to("View Books", books_path) %> / <%= link_to("View Authors", authors_path) %> / <%= link_to("Add a Book", new_book_path) %>
  </nav>
  <div class="content">
    <form action="<%= author_path %>" method="POST">
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
      <input type="hidden" name="_method" value="patch" />
      <div class="form-flex">
        <div class="label">
          <label for="name">Author name</label>
        </div>
        <div class="input">
          <input type="text" name="name" id="name" value="<%= @author.name %>">
        </div>
        <div class="label">
          <label for="dob">Author's D.O.B.</label>
        </div>
        <div class="input">
          <input type="date" name="date_of_birth" id="dob" value="<%= @author.date_of_birth %>">
        </div>
        <div class="label"></div>
        <div class="input">
          <input type="submit" class="buttons" value="Edit Author">
        </div>
      </div>
    </form>
  </div>
</div>